# HTTPS server
#
server {
	listen 3005;

	ssl on;
	ssl_certificate /home/jimb/loadbalance/keys/cert.pem;
	ssl_certificate_key /home/jimb/loadbalance/keys/key.pem;

	ssl_session_timeout 5m;

	ssl_protocols SSLv3 TLSv1;
	ssl_ciphers ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
	ssl_prefer_server_ciphers on;

	root /home/jimb/loadbalance/data;
	index index.html;
	location / {
		try_files $uri $uri/ =404;
	}
}
